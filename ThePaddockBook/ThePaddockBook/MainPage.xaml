<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThePaddockBook.MainPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label   
            x:Name="WelcomeMessage"
            Text="Good Afternoon User" 
            Grid.Row="0" />
        <Label
            x:Name="AuxiloryInformation"
            Text="24 Degrees 2:34pm"
            Grid.Row="0" />
        
        <!-- Image of paddock goes here -->

        <Label
            x:Name="CurrentPaddock"
            Text="The milking herd is in paddock 1"
            Grid.Row="2" />

        <Label
            x:Name="TaskTitle"
            Text="Tasks: "
            Grid.Row="4" />
        <Label
            x:Name="Worker1Name"
            Text="Worker 1" 
            Grid.Row="4" />
        <Label
            x:Name="Worker1Task"
            Text="Spray Fence Line "
            Grid.Row="4" />
        <Label
            x:Name="Worker1Location"
            Text="Paddock 3 "
            Grid.Row="4" />

        <Label
            x:Name="RotationTitle"
            Text="Rotation"
            Grid.Row="6" />
        <Label
            x:Name="RotationDescription"
            Text="The next paddock in rotation is paddock 2"
            Grid.Row="6" />
        <!-- Image of next paddock goes here -->

    </Grid>
</ContentPage>
